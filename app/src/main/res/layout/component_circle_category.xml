<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_width="70dp"
    android:layout_height="80dp">

        <ImageView
            android:id="@+id/circleBG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/circle_category_container"
            android:src="@drawable/container_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivCategoryIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/icon_category"
            android:src="@drawable/category_meat"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/circleBG"
            app:layout_constraintEnd_toEndOf="@+id/circleBG"
            app:layout_constraintStart_toEndOf="@+id/circleBG"
            app:layout_constraintStart_toStartOf="@+id/circleBG"
            app:layout_constraintTop_toTopOf="@+id/circleBG" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="1"
            android:text="@string/category"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleBG" />

</androidx.constraintlayout.widget.ConstraintLayout>